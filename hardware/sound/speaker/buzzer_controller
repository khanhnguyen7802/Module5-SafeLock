#Libraries
import RPi.GPIO as GPIO
from time import sleep

#Disable warnings (optional)
GPIO.setwarnings(False)

#Select GPIO mode
GPIO.setmode(GPIO.BCM)

#Set buzzer - pin 21 as output
buzzer=21
GPIO.setup(buzzer,GPIO.OUT)

#something like this to combine with other components
# if code is correct:
#  GPIO.output(buzzer,GPIO.HIGH)
#     print ("Beep")
#     sleep(0.5) # Delay in seconds
#     GPIO.output(buzzer,GPIO.LOW)
#     print ("No Beep")

#Run forever loop
while True:
    GPIO.output(buzzer,GPIO.HIGH)
    print ("Beep")
    sleep(0.01) # Delay in seconds, make small to create buzzing sound
    GPIO.output(buzzer,GPIO.LOW)
    print ("No Beep")
    sleep(0.01)